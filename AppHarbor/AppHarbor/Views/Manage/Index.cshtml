
@using Resources
@using R6MatchFinder.Models
@model IndexViewModel

@{
    ViewBag.Title = "Manage";
}

<div class="container">
    <h2>@ViewBag.Title.</h2>

    <p class="text-success">@ViewBag.StatusMessage</p>
    <div>
        <h4>Change your account settings</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="card-columns">
            <div class="card">
                <div class="card-header text-uppercase text-center" style="font-size: 14px;">
                    @resources.USERNAME
                </div>
                <div class="card-block">

                    @if (Model.AutoGenerated)
                    {
                        @Html.Partial("_SetUsername", new SetUsernameViewModel { Username = Model.Username })
                    }
                    else
                    {
                        <div class="text-center">
                            <label>@Model.Username</label>
                        </div>
                    }
                </div>
            </div>
            <div class="card">
                <div class="card-header text-uppercase text-center" style="font-size: 14px;">
                    @resources.PASSWORD
                </div>
                <div class="card-block">
                    @Html.Partial("_ManagePassword", Model)
                </div>
            </div>
            <div class="card">
                <div class="card-header text-uppercase text-center" style="font-size: 14px;">
                    @resources.EXTERNAL_LOGINS
                </div>
                <div class="card-block text-center">
                    @Html.Partial("_ExternalLoginListPartial", new ManageLoginsViewModel { CurrentLogins = Model.CurrentLogins, OtherLogins = Model.OtherLogins })
                </div>
            </div>
        </div>
    </div>
</div>